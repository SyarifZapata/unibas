<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<BorderPane fx:controller="ServerController"
            xmlns:fx="http://javafx.com/fxml" stylesheets="@style.css">

    <top>
    </top>

    <left>
        <VBox>
            <TextArea fx:id="textAreaMessages" prefHeight="400" prefWidth="610" editable="false">
            </TextArea>

        </VBox>
    </left>


    <bottom>
        <GridPane>
            <Button prefWidth="200" text="Close connection" onAction="#closeConnection"  GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.halignment="RIGHT"/>
            <Hyperlink text="www.sand-unibas.blogspot.com" onAction="#link" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        </GridPane>

    </bottom>

</BorderPane>