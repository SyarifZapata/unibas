<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>

<GridPane fx:id="loginWindow" fx:controller="sample.LoginController" hgap="10" vgap="10" alignment="CENTER"
          xmlns:fx="http://javafx.com/fxml" stylesheets="@style.css">

    <Label text="server: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="textFieldIP" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="2"
            text="localhost"/>
    <Label text="Port:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="textFieldPort" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="2"
            text="55555"/>
    <Label text="Name: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="2"/>
    <Button text="Connect" onAction="#connect" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <CheckBox fx:id="checkBoxConnectAs" text="Run as server" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
</GridPane>